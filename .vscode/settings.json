{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "spectral.enable": true,
  "spectral.rulesetFile": ".spectral.yml",
  "spectral.validateLanguages": ["json", "jsonc", "yaml"],
  "spectral.validateFiles": [
    "**/*asyncapi.yml",
    "**/*asyncapi.yaml",
    "**/*asyncapi.json",
    "**/*openapi.yml",
    "**/*openapi.yaml",
    "**/*openapi.json"
  ]
}
